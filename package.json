{
  "name": "dongjiang-recruitment",
  "version": "1.0.0",
  "description": "DongJiang Recruitment",
  "private": true,
  "engines": {
    "node": ">=18.13.0",
    "pnpm": ">=7.26.3"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint-staged": "ts-node scripts/src/lint-staged.ts",
    "format": "ts-node scripts/src/format.ts",
    "lint": "ts-node scripts/src/lint-fix.ts"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "concurrently": "^7.6.0",
    "eslint": "^8.33.0",
    "lint-staged": "^13.1.1",
    "prettier": "^2.8.3",
    "stylelint": "^14.16.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.9.5",
    "vue-tsc": "^1.0.24",
    "vue-tsc-files": "^0.0.5",
    "yorkie-pnpm": "^2.0.1"
  },
  "gitHooks": {
    "pre-commit": "ts-node scripts/src/lint-staged.ts",
    "commit-msg": "commitlint -e -V "
  },
  "keywords": [
    "recruitment"
  ],
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "vue-tsc-files --noEmit",
      "prettier --write"
    ],
    "*.{css,scss,sass,less,styl}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,yaml,yml,md}": [
      "prettier --write"
    ],
    "*.{vue}": [
      "eslint --fix",
      "stylelint --fix",
      "vue-tsc-files --noEmit",
      "prettier --write"
    ]
  },
  "author": "ucstu",
  "license": "MIT"
}
